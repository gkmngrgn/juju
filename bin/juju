#!/usr/bin/env coffee

find_project_dir = ->
    # Later, we will update this function with
    # --path argument.
    pwd = process.cwd()
    try
        require "#{ pwd }/settings"
        pwd
    catch error
        null

global.PROJECT_DIR = find_project_dir()
if global.PROJECT_DIR
    require.paths.push "#{ global.PROJECT_DIR }/apps"

juju = require 'juju'
juju.core.management.execute()